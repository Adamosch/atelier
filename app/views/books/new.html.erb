<div class="basic-form">
  <h2>New book</h2>
  <%= form_tag books_path, method: :post do %>
    <div class="field x-isbn">
      <%= text_field_tag 'isbn', '', placeholder: 'isbn' %>
      <%= link_to 'get info', '#', class: 'x-get-book-info-from-google-books' %>
    </div>

    <div class="field x-title">
      <%= text_field_tag 'title', '', placeholder: 'title', autofocus: true %>
    </div>

    <div class="field x-page-count">
      <%= number_field_tag 'page_count', '', placeholder: 'pages count' %>
    </div>

    <div class="field x-published-date">
      <%= text_field_tag 'published_date', '', placeholder: 'published date (yyyy-mm-dd or yyyy)' %>
    </div>

    <%= button_tag type: 'submit', class: 'btn' do %>
      save
    <% end %>
  <% end %>
  <%= button_to 'cancel', books_path, method: :get %>
</div>
